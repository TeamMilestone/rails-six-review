<% column_list = [:name, :phone, :email, :encrypted_password, :reset_password_token, :reset_password_sent_at, :remember_created_at, :sign_in_count, :current_sign_in_at, :last_sign_in_at, :current_sign_in_ip, :last_sign_in_ip, :profile_img, :google_token, :google_refresh_token, :comments_count] %>
<table class="ui striped celled table">
  <tbody>
    <% column_list.each do |column| %>
      <tr>
        <td class="three wide"><%= t(column, scope: [:activerecord, :users]) %></td>
        <td><%= user[column] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
